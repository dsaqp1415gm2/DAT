<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="8dp">
    <TextView
        android:id="@+id/post_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject:"
        android:textSize="16dp"
        android:textColor="@color/primary_dark_color"/>
    <EditText
        android:id="@+id/post_et1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:layout_below="@id/post_tv1"/>
    <TextView
        android:id="@+id/post_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content:"
        android:textSize="16dp"
        android:textColor="@color/primary_dark_color"
        android:layout_below="@id/post_et1"/>
    <EditText
        android:id="@+id/post_et2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="#000000"
        android:layout_below="@id/post_tv2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/post_et2"
        android:gravity="center"
        >
        <Button
            android:id="@+id/post_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/post_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="#ffffff"
            android:layout_margin="8dp"
            android:background="@drawable/buttonshape"
            />
    </LinearLayout>
</RelativeLayout>